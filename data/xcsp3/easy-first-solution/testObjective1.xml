<instance format="XCSP3" type="COP">
  <variables>
    <array id="x" size="[5]"> 0..500 </array>
    <array id="z" size="[5][5]"> 1..500 </array>
  </variables>
  <constraints>
    <group class="channeling">
      <intension> eq(%0,add(%1,%2)) </intension>
      <args> x[1] x[0] z[0][1] </args>
      <args> x[2] x[0] z[0][2] </args>
      <args> x[3] x[0] z[0][3] </args>
      <args> x[4] x[0] z[0][4] </args>
      <args> x[2] x[1] z[1][2] </args>
      <args> x[3] x[1] z[1][3] </args>
      <args> x[4] x[1] z[1][4] </args>
      <args> x[3] x[2] z[2][3] </args>
      <args> x[4] x[2] z[2][4] </args>
      <args> x[4] x[3] z[3][4] </args>
    </group>
    <allDifferent> z[0][1..4] z[1][2..4] z[2][3..4] z[3][4] </allDifferent>
  </constraints>
  <objectives>
    <minimize> x[4] </minimize>
  </objectives>
</instance>
